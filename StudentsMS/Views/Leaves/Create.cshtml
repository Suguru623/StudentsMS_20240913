@model StudentsMS.Models.Leave

@{
    ViewData["Title"] = "新增假別";
}

<h1>@ViewData["Title"]</h1>

<h4>Leave</h4>
<div>
    <a asp-action="Index"><i class="bi bi-arrow-left-circle fs-4"></i></a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveID" class="control-label"></label>
                <input asp-for="LeaveID" class="form-control" />
                <span asp-validation-for="LeaveID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LName" class="control-label"></label>
                <input asp-for="LName" class="form-control" />
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確定新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

