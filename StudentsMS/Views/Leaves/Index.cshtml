@model IEnumerable<StudentsMS.Models.Leave>

@{
    ViewData["Title"] = "假別資料";
    Layout = "_Layout";
}

<h1 class="text-center shadow my-3 p-4">@ViewData["Title"]</h1>

@* <p class="text-end">
    <a asp-action="Create" class="btn btn-primary">新增假別</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeaveID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LName)
            </th>
            <th class="text-end">
                <a asp-action="Create" class="btn btn-primary">新增假別</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.LeaveID" class="btn btn-primary">編輯</a> |
                    <a asp-action="Details" asp-route-id="@item.LeaveID" class="btn btn-success">詳細資料</a> |
                    <a asp-action="Delete" asp-route-id="@item.LeaveID" class="btn btn-danger">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
