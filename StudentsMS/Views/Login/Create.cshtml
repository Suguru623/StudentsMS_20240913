@model StudentsMS.Models.Login

@{
    ViewData["Title"] = "新增帳號";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<h4>Login</h4>

<div>
    <a asp-action="Index" asp-controller="Students"><i class="bi bi-arrow-left-circle fs-4"></i></a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="type" class="control-label"></label>
                <input asp-for="type" class="form-control" />
                <span asp-validation-for="type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確定新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

