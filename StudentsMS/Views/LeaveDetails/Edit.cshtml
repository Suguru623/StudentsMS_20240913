@model StudentsMS.Models.LeaveDetail

@{
    ViewData["Title"] = "編輯請假紀錄";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<h4>LeaveDetail</h4>
<div>
    <a asp-action="Index"><i class="bi bi-arrow-left-circle fs-4"></i></a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LDID" />
            <div class="form-group">
                <label asp-for="StuID" class="control-label"></label>
                <select asp-for="StuID" class="form-control" asp-items="ViewBag.StuID"></select>
                <span asp-validation-for="StuID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveID" class="control-label"></label>
                <select asp-for="LeaveID" class="form-control" asp-items="ViewBag.LeaveID"></select>
                <span asp-validation-for="LeaveID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LDDate" class="control-label"></label>
                <input asp-for="LDDate" class="form-control" />
                <span asp-validation-for="LDDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確定修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@* <div>
    <a asp-action="Index">Back to List</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
