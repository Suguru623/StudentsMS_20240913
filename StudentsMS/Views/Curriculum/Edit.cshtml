@model StudentsMS.Models.Curriculum

@{
    Layout = "_LayoutNS";
}

<h4>開課課程</h4>
<div>
    <a asp-action="Index"><i class="bi bi-arrow-left-circle fs-4"></i></a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseID" />
            <input type="hidden" asp-for="DeptID" />
            <input type="hidden" asp-for="CTID" />
            <div class="form-group">
                <label asp-for="CourseID" class="control-label"></label>
                <input asp-for="CourseID" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="DeptID" class="control-label"></label>
                <input asp-for="DeptID" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="CTID" class="control-label"></label>
                <input asp-for="CTID" class="form-control" readonly/>
                <span asp-validation-for="CTID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CTHours" class="control-label"></label>
                <input asp-for="CTHours" class="form-control" />
                <span asp-validation-for="CTHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確定修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

