@model StudentsMS.Models.Curriculum
using StudentsMS.Models;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Curriculum</h4>
    <div>
        <a asp-action="Index"><i class="bi bi-arrow-left-circle fs-4"></i></a>
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.CName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dept)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dept.DName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CT)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CT.CTID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CTHours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CTHours)
        </dd>
    </dl>
</div>
<div>
    @* @Html.ActionLink("Edit", "Edit", new { CourseID = @Model.CourseID, DeptID = @Model.DeptID, CTID = @Model.CTID }) | *@
    <form asp-action="Edit">
        <input type="hidden" name="deptID" value="@Model.DeptID" />
        <input type="hidden" name="courseID" value="@Model.CourseID" />
        <input type="hidden" name="ctID" value="@Model.CTID" />
        <input type="hidden" name="ctID" value="@Model.CTHours" />
        <input type="submit" value="編輯" class="btn btn-primary" />
    </form>
    @* <a asp-action="Index">Back to List</a> *@
</div>
