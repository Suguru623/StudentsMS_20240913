@model StudentsMS.Models.Course

@{
    ViewData["Title"] = "修改課程資料";
}

<h1>@ViewData["Title"]</h1>

<h4>Course</h4>
<div>
    <a asp-action="Index"><i class="bi bi-arrow-left-circle fs-4"></i></a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseID" />
            <div class="form-group">
                <label asp-for="CName" class="control-label"></label>
                <input asp-for="CName" class="form-control" />
                <span asp-validation-for="CName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確定修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

